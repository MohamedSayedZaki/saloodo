{% extends 'base.html.twig' %}

{% block title %}Login!{% endblock %}

{% block body %}
<style>
.login-form{
    margin-top:30%;
}
</style>
<div class="container">
    <div class="col-md-6 col-md-offset-3">
        <form class="parcel-new-form">
            <h3>Add New Parcel</h3>        
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" class="form-control" id="title" placeholder="Enter Parcel Title">
            </div>
            <div class="form-group">
                <label for="pick-up">Pick-up :</label>
                <input type="text" class="form-control" id="pick-up" placeholder="Enter Parcel Pick-up Address">
            </div>
            <div class="form-group">
                <label for="drop-off">Drop off :</label>
                <input type="text" class="form-control" id="drop-off" placeholder="Enter Parcel Drop-off Address">
            </div>            
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
  </div>
</div>

<script src="{{ asset('js/parcel.js') }}"></script>
{% endblock %}